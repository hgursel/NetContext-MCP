{
  "name": "netcontext-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol servers for network automation - documentation and execution layers",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"packages/**/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/src/**/*.ts\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "network-automation",
    "hp-aruba",
    "procurve",
    "network-engineering"
  ],
  "author": "Hakan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/netcontext-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  }
}
